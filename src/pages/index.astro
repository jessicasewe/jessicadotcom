  <style>
    .social-container {
      display: flex;
	  margin-bottom: 100px;
    }

    html {
      scroll-behavior: smooth;
    }

    .social-link {
		text-decoration: none;
		color: #24292e;
		padding: 1rem;
		position: relative;
		display: inline-block;
		overflow: hidden;
		transition: color 0.3s ease, transform 0.3s ease;
	}

	.social-link:hover {
	color: #0366d6;
	transform: scale(1.1);
	}

    .link-wrapper {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem;
		width: 40px;
		height: 40px;
	}

	.social-link:hover .line-top,
	.social-link:hover .line-bottom {
		background-color: #0366d6; 
		transform: translateX(-50%) scaleX(1.5);
	}

    @keyframes snake-move {
		0% {
			transform: translateX(0);
		}
		25% {
			transform: translateX(5px);
		}
		50% {
			transform: translateX(0);
		}
		75% {
			transform: translateX(-5px);
		}
		100% {
			transform: translateX(0);
		}
	}

    .line {
		position: absolute;
		width: 40px;
		height: 2px;
		background-color: #d0d7de;
		transition: transform 0.3s ease, background-color 0.3s ease;
	}

    .line-top {
		top: 0;
		left: 50%;
		transform: translateX(-50%) scaleX(1);
	}

    .line-bottom {
		bottom: 0;
		left: 50%;
		transform: translateX(-50%) scaleX(1);
	}
	
    .experience-chain {
		display: flex;
		flex-direction: column;
		gap: 15px; 
	}

    .experience-item {
		display: flex;
		align-items: center;
		gap: 20px; 
	}

    .experience-circle {
		width: 50px; 
		height: 50px; 
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		background-color: #f4f4f4;
		font-size: 24px; 
		flex-shrink: 0; 
	}

    .experience-circle span {
      font-size: 2rem;
    }

	.experience-details {
		display: flex;
		flex-direction: column;
	}

    .experience-line {
		height: 2px;
		background-color: #d0d7de;
		width: calc(100% - 50px); 
		margin-left: 50px;
	}

	.experience-details .description {
		max-height: 0;
		opacity: 0;
		transition: max-height 0.5s ease-in-out, opacity 0.3s ease-in-out;
	}

	.experience-item:hover .description {
		display: block;
	}

	.experience-details .title,
		.experience-details .role {
		display: block;
		transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
	}

	.experience-item:hover .experience-circle {
		background-color: #0056b3;
	}

	.experience-item:hover .experience-details .title,
	.experience-item:hover .experience-details .role {
		transform: translateY(-5px);
		opacity: 1;
	}

	.experience-item:hover .experience-details .description {
		max-height: 200px;
		opacity: 1;
	}

	.role, .description {
		margin: 0;
	}

	#experience {
		margin-top: 30px;
		scroll-margin-top: 80px;
	}

	#github-projects {
		margin-top: 100px;
		scroll-margin-top: 80px;
	}

	#skills {
		margin-top: 100px;
	}

  /* Container for skills */
	.skills-container {
		display: flex;
		gap: 12px; 
		flex-wrap: wrap;
		margin-top: 30px;
	}

  /* Style the bubble */
	.bubble {
		display: inline-block;
		padding: 4px 8px; 
		border: 2px solid var(--bubble-color); 
		color: black; 
		background-color: rgba(var(--bubble-color-rgb), 0.1); 
		border-radius: 25px; 
		font-size: 12px; 
		font-weight: normal;
		text-align: center;
		transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
	}

 	.bubble:hover {
		transform: scale(1.05); 
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
	}

	.projects-container {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	#projects-list {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 100px;
	max-width: 800px;
	}

  .project-card {
  padding: 1rem;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f9f9f9;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

  .project-card:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
}

  .og-card img {
    width: 100%;
    height: auto;
    display: block;
  }

  .og-content {
    padding: 15px;
    background: #f9f9f9;
  }

  .og-content h3 {
    margin: 0;
    font-size: 1.2em;
    color: #0366d6;
  }

  .og-content p {
    margin: 5px 0 0;
    color: #333;
  }

  </style>
  
  <script>
	function showDescription(item: { querySelector: (arg0: string) => any; }) {
		const title = item.querySelector('.title');
		const role = item.querySelector('.role');
		const description = item.querySelector('.description');
		
		if (title && role) {
			title.style.display = 'none';
			role.style.display = 'none';
		}
		
		if (description) {
			description.style.display = 'block';
		}
	}

	function hideDescription(item: { querySelector: (arg0: string) => any; }) {
		const title = item.querySelector('.title');
		const role = item.querySelector('.role');
		const description = item.querySelector('.description');
		
		if (title && role) {
			title.style.display = 'block';
			role.style.display = 'block';
		}
		
		if (description) {
			description.style.display = 'none';
		}
	}

  </script>
