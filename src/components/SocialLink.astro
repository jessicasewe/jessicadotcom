---
export interface SocialLinkProps {
  href: string;
  svgPath: string;
  label: string;
}

const { href, svgPath, label } = Astro.props;
---
<a href={href} class="social-link" target="_blank" rel="noopener noreferrer" aria-label={label}>
  <div class="link-wrapper">
    <div class="line line-top"></div>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
      <path d={svgPath} />
    </svg>
    <div class="line line-bottom"></div>
  </div>
</a>
<style>
  .social-link {
    text-decoration: none;
    color: #24292e;
    padding: 1rem;
    position: relative;
    display: inline-block;
    overflow: hidden;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .social-link:hover {
    color: #0366d6;
    transform: scale(1.1);
  }

  .link-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    width: 40px;
    height: 40px;
  }

  .social-link:hover .line-top,
  .social-link:hover .line-bottom {
    background-color: #0366d6;
    transform: translateX(-50%) scaleX(1.5);
  }
</style>
